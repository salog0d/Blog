<%= form_with model: @blog_post do |form| %>
    <% if form.object.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            <ul>
                <% form.object.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="mb-4">
        <%= form.label :title, "Title", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :title, class: "w-full px-3 py-2 border rounded-lg focus:ring focus:ring-blue-200 focus:outline-none" %>
    </div>

    <div class="mb-4">
        <%= form.label :body, "Body", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :body, rows: 5, class: "w-full px-3 py-2 border rounded-lg focus:ring focus:ring-blue-200 focus:outline-none" %>
    </div>

    <div>
        <%= form.button "Submit Post", class: "w-full bg-blue-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-600" %>
    </div>
<% end %>
